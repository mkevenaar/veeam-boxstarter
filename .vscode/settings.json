{
  // THe following is needed to force vscode-powershell
  // to use the same settings as the editor config file.
  "editor.tabSize": 2,
  "editor.rulers": [80,120],
  "[powershell]": {
    "files.encoding": "utf8bom",
  },
  "cSpell.ignoreWords": [
    "boxstarter",
    "choco",
    "myfile",
    "scherer",
    "sqlexpress",
    "tada",
    "vagrantfile",
    "veeam",
    "virtualbox"
  ],
}
